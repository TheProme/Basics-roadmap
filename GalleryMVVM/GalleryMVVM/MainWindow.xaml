<Window x:Class="GalleryMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalleryMVVM"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="700">
    <Grid MinHeight="600">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <ListBox ItemsSource="{Binding GalleryImages}" SelectedItem="{Binding CurrentImage}" Style="{StaticResource GalleryListBox}"/>
        </DockPanel>
        <StackPanel Grid.Row="1">

            <Button x:Name="addButton" Content="Add images" Command="{Binding AddImages}" Click="addButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
