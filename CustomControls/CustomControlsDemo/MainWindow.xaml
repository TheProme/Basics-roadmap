<Window x:Class="CustomControlsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomControlsDemo"
        xmlns:controls="clr-namespace:CustomControls;assembly=CustomControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <controls:CardView Header="Header453453" 
                        BorderBrush="Blue" 
                        BorderThickness="1" 
                        Text="Main text goes here"
                        CornerRadius="6" 
                        Width="200"
                        Height="300">
        </controls:CardView>
        <controls:NumericUpDown MinValue="-0.5" 
                                NumericValue="5" 
                                MaxValue="15" 
                                Tick="0.5"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
    </StackPanel>
</Window>
